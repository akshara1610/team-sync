# Application Settings
APP_NAME=TeamSync
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql+psycopg://teamsync:teamsync_password@localhost:5432/teamsync
REDIS_URL=redis://localhost:6379/0

# LiveKit Configuration
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=your_api_key
LIVEKIT_API_SECRET=your_api_secret

# LLM Provider Configuration
LLM_PROVIDER=gemini  # Options: gemini, openai, anthropic

# OpenAI Configuration (optional if using OpenAI)
OPENAI_API_KEY=your_openai_api_key

# Google Gemini Configuration (recommended - use Gemini 2.0)
GOOGLE_API_KEY=your_google_api_key

# Anthropic Configuration (optional if using Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key

# HuggingFace Token (for pyannote.audio)
HF_TOKEN=your_huggingface_token

# JIRA Configuration
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your_jira_api_token
JIRA_PROJECT_KEY=PROJ

# Email Configuration (TeamSync bot account: teamsync990@gmail.com)
# Get Gmail App Password for teamsync990@gmail.com: https://support.google.com/accounts/answer/185833
TEAMSYNC_EMAIL=teamsync990@gmail.com
EMAIL_PASSWORD=your_gmail_app_password

# Google Calendar Configuration
GOOGLE_CREDENTIALS_FILE=credentials.json
GOOGLE_TOKEN_FILE=token.json

# Vector Store Configuration
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION_NAME=meeting_transcripts
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Agent Configuration
MAX_REFLECTION_ITERATIONS=3
SUMMARIZER_MODEL=gemini-2.0-flash-exp  # Gemini 2.0 models: gemini-2.0-flash-exp
# Other options: gemini-1.5-pro, gemini-1.5-flash, gpt-4-turbo-preview, claude-3-5-sonnet-20241022
KNOWLEDGE_AGENT_TOP_K=5

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000"]
